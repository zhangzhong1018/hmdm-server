<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hmdm.persistence.mapper.BroadcastMapper">

    <resultMap id="broadcastFull" type="Broadcast">
        <id property="id" column="id" />
        <result property="type" column="type"/>
        <result property="number" column="number"/>
        <result property="subject" column="subject"/>
        <result property="description" column="description"/>
        <result property="lecturer" column="lecturer"/>
        <result property="attendees" column="attendees"/>
        <result property="startTime" column="starttime"/>
        <collection property="devices" ofType="com.hmdm.rest.json.LookupItem">
            <result property="id" column="deviceId"/>
            <result property="name" column="deviceNumber"/>
        </collection>
    </resultMap>

    <select id="findAll" resultMap="broadcastFull">
        SELECT broadcasts.id,
               broadcasts.type,
               broadcasts.number,
               broadcasts.subject,
               broadcasts.description,
               broadcasts.lecturer,
               broadcasts.attendees,
               broadcasts.startTime,
               devices.id AS deviceId,
               devices.number AS deviceNumber
        FROM broadcasts
        LEFT JOIN broadcastDevices ON broadcasts.id = broadcastDevices.broadcastId
        LEFT JOIN devices ON broadcastDevices.deviceid = devices.id
    </select>

    <select id="findByCode" resultMap="broadcastFull">
        SELECT broadcasts.id,
               broadcasts.type,
               broadcasts.number,
               broadcasts.subject,
               broadcasts.description,
               broadcasts.lecturer,
               broadcasts.attendees,
               broadcasts.startTime
        FROM broadcasts
        WHERE broadcasts.number like '%${number}%'
    </select>

    <select id="findById" resultMap="broadcastFull">
        SELECT broadcasts.id,
               broadcasts.type,
               broadcasts.number,
               broadcasts.subject,
               broadcasts.description,
               broadcasts.lecturer,
               broadcasts.attendees,
               broadcasts.startTime
        FROM broadcasts
        WHERE broadcasts.id=#{id}
    </select>

    <insert id="insertBroadcastDevices">
        INSERT INTO broadcastdevices (broadcastId, deviceId) VALUES
        <foreach item="deviceId" index="index" collection="devices"
                 open="" separator="," close="">
            (#{broadcastId}, #{deviceId})
        </foreach>
    </insert>

    <insert id="insertBroadcast" parameterType="Broadcast" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO broadcasts(type, number, subject, description, lecturer, attendees, starttime)
        VALUES (#{type}, #{number}, #{subject}, #{description}, #{lecturer}, #{attendees}, #{startTime});
    </insert>

</mapper>
